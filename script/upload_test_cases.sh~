hostname="nm.yarn-perf.yarnrm-pg0.wisc.cloudlab.us"
#hostname="nm.yarn-drf.yarnrm-pg0.wisc.cloudlab.us"
echo "upload the files to $hostname"

uploadTestCases () {
	echo "upload $2 ................"
	tar zcvf $1 $2
	ssh tanle@nm "rm -rf $1; rm -rf $2;"
	scp $1 nm:~/ 
	ssh tanle@nm "tar -xvzf $1"
	rm -rf $1
	ssh tanle@nm "rm -rf $1;"
}

tarFile="SWIM.tar"; testCase="../../SWIM"; uploadTestCases $tarFile $testCase &

tarFile="spark-test-cases.tar"; testCase="../spark-test-cases"; uploadTestCases $tarFile $testCase &

tarFile="word-count.tar"; testCase="../flink-test-cases/word-count"; uploadTestCases $tarFile $testCase &

wait

